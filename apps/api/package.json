{
  "name": "@sk/api",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/index.js",
  "scripts": {
    "clean": "rm -rf dist node_modules",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "concurrently \"tsc --watch\" \"nodemon -q dist/index.js\"",
    "test:unit-dev": "vitest",
    "test:unit": "vitest --run",
    "db:migrate": "drizzle-kit generate:pg --out migrations --schema src/db/schema",
    "db:up": "drizzle-kit up:pg --out=migrations"
  },
  "dependencies": {
    "@clerk/fastify": "^0.1.9",
    "@fastify/cors": "^8.2.1",
    "@fastify/websocket": "^7.1.3",
    "dotenv": "^16.0.3",
    "events": "^3.3.0",
    "fastify": "^4.14.1",
    "fastify-plugin": "^4.5.0",
    "fastify-socket.io": "^4.0.0",
    "pg": "^8.10.0",
    "socket.io": "^4.6.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/node": "^18.15.0",
    "@types/pg": "^8.6.6",
    "concurrently": "^7.6.0",
    "cors": "link:@types/@fastify/cors",
    "drizzle-kit": "^0.17.0",
    "drizzle-orm": "^0.21.1",
    "nodemon": "^2.0.21",
    "supertest": "^6.3.3",
    "typescript": "^4.9.5",
    "vitest": "^0.25.3"
  }
}
